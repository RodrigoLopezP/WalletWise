@model ExpenseListViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <section>
                <h3>Riassunto mensile</h3>
                <br>
                <i> Spesa mensile da <br>2023-10-01 a 2023-10-30 </i>
            </section>
            <br>
            <section>
                <b>300,00 EUR</b>
            </section>
        </div>
        <div class="col-md-9">
            <section class="d-flex align-items-center">
                <h1>Le tue spese</h1>
                <div style="width:20px"></div>
                <a role="button" class="btn btn-sm btn btn-outline-primary" data-bs-toggle="modal"
                    data-bs-target="#ModalNewExpense">
                    <i class="far fa-plus-square fa-xl"></i>
                </a>
            </section>
            <table class="table table-hover table-sm align-middle">
                <br>
                <thead class=" table-light">
                    <tr>
                        <th>Data</th>
                        <th>Nome</th>
                        <th>Soldi</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ExpenseList)
                    {
                        <partial name="Expenses/_ExpenseLine" model="@item"></partial>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal - NewExpense -->
<div class="modal fade" id="ModalNewExpense" tabindex="-1" aria-labelledby="NewExpenseLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-inline" method="post" asp-action="Add">
                <div class="modal-header">
                    <h5 class="modal-title" id="NewExpenseLabel">Aggiungi nuova spesa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3 align-items-center">
                        <label asp-for="NewExpense.Name" for="colFormLabel" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="NewExpense.Name" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label asp-for="NewExpense.Amount" for="colFormLabel" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-3">
                            <input asp-for="NewExpense.Amount" type="number" step="0.01" min="1" class="form-control"
                                placeholder="00.00">
                        </div>
                        <div class="col-sm-1"></div>
                        <label asp-for="NewExpense.Currency" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-3">
                            <select asp-for="NewExpense.Currency" class="form-control" placeholder="EUR"></select>
                        </div>
                        <div class="col-sm-1"></div>
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label asp-for="NewExpense.Date" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <input asp-for="NewExpense.Date" type="date" class="form-control">
                        </div>
                        <label asp-for="NewExpense.Location" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <input asp-for="NewExpense.Location" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>
@model List<ExpenseViewModel>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <section>
                <h3>Riassunto mensile</h3>
                <br>
                <i> Spesa mensile da <br>2023-10-01 a 2023-10-30 </i>
            </section>
            <br>
            <section>
                <b>300,00 EUR</b>
            </section>
        </div>
        <div class="col-md-9">
            <section class="d-flex align-items-center">
                <h1>Le tue spese</h1>
                <div style="width:20px"></div>
                <a role="button" class="btn btn-sm btn btn-outline-primary" data-bs-toggle="modal"
                    data-bs-target="#ModalNewExpense">
                    <i class="far fa-plus-square fa-xl"></i>
                </a>
            </section>
            <table class="table table-hover table-sm align-middle">
                <br>
                <thead class=" table-light">
                    <tr>
                        <th>Data</th>
                        <th>Nome</th>
                        <th>Soldi</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <partial name="Expenses/_ExpenseLine" model="@item"></partial>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal - NewExpense -->
<div class="modal fade" id="ModalNewExpense" tabindex="-1" aria-labelledby="NewExpenseLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="NewExpenseLabel">Aggiungi nuova spesa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form-inline">
                    <div class="row mb-3 align-items-center">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="colFormLabel" placeholder="La nuova mia spesa">
                        </div>
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Prezzo</label>
                        <div class="col-sm-3">
                            <input type="number" step="0.01" min="1" class="form-control" id="colFormLabel" placeholder="0.00">
                        </div>
                        <div class="col-sm-1"></div>
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Valuta</label>
                        <div class="col-sm-3">
                            <select type="email" class="form-control" id="colFormLabel" placeholder="EUR"></select>
                        </div>
                        <div class="col-sm-1"></div>
                    </div>
                    <div class="row mb-3 align-items-center">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Data</label>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" id="colFormLabel">
                        </div>
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Luogo</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" id="colFormLabel">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <button type="button" class="btn btn-primary">Salva</button>
            </div>
        </div>
    </div>
</div>